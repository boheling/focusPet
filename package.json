{
  "name": "focuspet",
  "version": "1.0.0",
  "description": "A delightful browser extension that keeps you company and productive with a virtual pet overlay",
  "main": "dist/manifest.json",
  "scripts": {
    "dev": "vite",
    "build": "npm run clean && npm run type-check && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "browser-extension",
    "productivity",
    "virtual-pet",
    "focus",
    "reminders",
    "chrome-extension"
  ],
  "author": "focusPet Team",
  "license": "MIT",
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.2",
    "@types/chrome": "^0.0.254",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-chrome-extension": "^0.0.7",
    "vitest": "^1.0.4"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.7"
  }
}
